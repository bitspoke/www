# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    @controllers.ApplicationController.index
GET        /contacts            @controllers.ApplicationController.contacts
GET        /projects            @controllers.ApplicationController.projects
POST       /articles            @controllers.ArticleController.create
GET        /articles/:id        @controllers.ArticleController.read(id)
DELETE     /articles/:id        @controllers.ArticleController.delete(id)
GET        /articles            @controllers.ArticleController.list

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
